<div class="order-list-summary">
  <table>
    <thead>
      <tr>
        <th>MENUS</th>
        <th>QUANTITY</th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each_with_index do |order, index| %>
        <tr>
          <!-- need modifying with @food_title -->
          <td class="table-margin-column"></td>
          <td clas="not-big"><%= order.food.name %><span class="english"> (<%= order.food.en %>)</span></td>
          <td class="<%= "list-#{index} text-center bold" %>"></td>
        </tr>
      <% end %>
    </tbody>
    <tfoot>
      <tr>
        <td colspan="2" class="sum">
          <%= @orders.map {|order| order.order}.sum %>
        </td>
      </tr>
    </tfoot>
  </table>
</div>
