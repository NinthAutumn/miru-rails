<div class="container">
  <div class="row">
    <div class="col-sm top-bar">
      <%= link_to root_path, class: "nav-icon" do %>
        <i class="fas fa-angle-left"></i>
      <% end %>
      <h2 class="heading">Results</h2>
      <%= link_to root_path, class: "nav-icon" do %>
        <i class="fas fa-sort-amount-down"></i>
      <% end %>
    </div>
  </div>
</div>
<div class="index-wrapper">
  <div class="index-container">
    <div class="row" style="margin:0;">
      <div class="cards">
        <% counter = 0 %>
        <% @results.each do |result| %>
          <div class="col-xs-6 col-sm-4 col-md-3 col-lg-2" style="padding: 1px;">
            <div class="cards">
              <% counter += 1 %>
              <div class="card">
                <%= cl_image_tag(@results_with_data[result][0], class: "img") %>
                <div class="list">
                  <p><%= result.food.name %></p>
                  <Cart></Cart>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-sm bot-bar">
      <%= link_to root_path, class: "nav-icon" do %>
        <i class="fas fa-camera"></i>
      <% end %>
      <%= link_to 'See Order', root_path, class: "order-btn" %>
      <%= link_to root_path, class: "nav-icon" do %>
        <i class="fas fa-heart"></i>
      <% end %>
    </div>
  </div>
</div>
