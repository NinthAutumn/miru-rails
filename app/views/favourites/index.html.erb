<% content_for :meta_title do %>
  Favourites
<% end %>
<!-- top bar -->
<div class="container" id="common-top">
  <div class="row">
    <%= link_to request.referer, class: "top-back" do %>
      <i class="fas fa-chevron-left"></i>
    <% end %>
    <h1>Favourites</h1>
  </div>
</div>
<div id="hello">
  <div class="favourite-container">
    <% counter = 0 %>
    <% @favourited_foods.each do |favourited_food| %>
      <div class="content">
        <div class="img-fav">
          <%= link_to food_path(favourited_food), class: "link-food" do %>
            <% if favourited_food.images.nil? %>
              <%= image_tag(@food_images[:image_paths][0], class: "img") %>
            <% else %>
              <%= image_tag(favourited_food.images[0], class: "img") %>
            <% end %>
          </div>
          <div class="text-info" >
            <div class="text-content">
              <p style="margin:0;"><%= favourited_food.en %></p>
              <small class="search-food-desc"><%= favourited_food.name %></small>
            </div>
            <div class="show-page">
              <%= link_to food_path(favourited_food.id) do %>
                <i class="fas fa-angle-right"></i>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
